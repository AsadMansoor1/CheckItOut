<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_tryon"
            android:layout_width="100sp"
            android:layout_height="75sp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:drawableTop="@mipmap/tryon"
            android:text="3D Tryon"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <Button
            android:id="@+id/btn_frameSizes"
            android:layout_width="100sp"
            android:layout_height="75sp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:drawableTop="@mipmap/findglasses"
            android:text="Frame Sizes"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <Button
            android:id="@+id/btn_buyframes"
            android:layout_width="100sp"
            android:layout_height="75sp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:drawableTop="@mipmap/shoppingbasket"
            android:text="Buy Frames"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>